{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "rootDir": ".",
    "types": [
      "bun-types" // add Bun global
    ],
    "noEmit": false,
    "composite": false
  },
  "include": ["./**/*"],
  "exclude": ["config.js"]
}
